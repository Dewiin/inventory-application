<a class="trainer-view" tabindex="0" href="/trainers/<%= trainer.name %>/details"
    data-name="<%= trainer.name %>"
    data-tilt data-tilt-glare="true" 
    data-tilt-max-glare="0.3" 
    data-tilt-perspective="500" 
    data-tilt-scale="1.1" 
    data-tilt-reverse="true">
    <% if(trainer.gender === 'male') { %>
        <img src="/assets/trainer_m.gif" alt="trainer_male">
    <% } else { %> 
        <img src="/assets/trainer_f.gif" alt="trainer_female">
    <% } %>
    <p> <%= trainer.name %> </p>
</a>