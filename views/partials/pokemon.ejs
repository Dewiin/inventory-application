<div class="pokemon-card" 
    data-name="<%= pokemon.name %>"
    data-tilt data-tilt-glare="true" 
    data-tilt-max-glare="0.3" 
    data-tilt-perspective="500" 
    data-tilt-scale="1.1" 
    data-tilt-reverse="true">
    <a class="pokemon-view hidden card-front active"
    data-name="<%= pokemon.name %>">
        <img src="<%= pokemon.sprite %>">
        <p><b><%= pokemon.name %></b></p>
    </a>
    <a class="pokemon-view hidden card-back" 
    data-name="<%= pokemon.name %>">
        <section class="types"></section>
        <section class="stats">
            <p><b><i>Stats</i></b></p>
            <span class="stats-row">
                <p>HP: <%= pokemon.hp %>/<%= pokemon.hp %></p>
                <p>Attack: <%= pokemon.attack %></p>
            </span>
            <span class="stats-row">
                <p>Defense: <%= pokemon.defense %></p>
                <p>Sp. Attack: <%= pokemon.sp_attack %></p>
            </span>
            <span class="stats-row">
                <p>Sp. Defense: <%= pokemon.sp_defense %></p>
                <p>Speed: <%= pokemon.speed %></p>
            </span>
        </section>
    </a>
</div>