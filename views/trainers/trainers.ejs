<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles/index.css">
  <link rel="stylesheet" href="/styles/trainersView.css">
  <script src="/modules/vanilla-tilt.js" defer></script>
  <script src="/modules/addTrainer.js" defer></script>
  <%-include("../partials/favicon")%>
</head>
<body>
  <%-include("../partials/parallax")%>
  <div class="navbar hidden">
    <%-include("../partials/navbar")%>
  </div>

  <%-include("../partials/addTrainer")%>
  <section class="trainers main-content">
    <% if (locals.errors) { %>
      <%-include("../partials/errors", {errors: errors})%>
    <% } %>

    <div class="all-trainers-view">
      <% trainers.forEach((trainer) => { %>
        <%-include("../partials/trainer", {trainer: trainer})%>
      <% }) %>
    </div>
  </section>

</body>
</html>